<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvDataManagementHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/tvDataManagement"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#33FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tvDataManagementHeader" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewJson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/viewMoodDataButton"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_file"
            app:iconGravity="start"
            app:iconTint="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteJson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/deleteMoodDataButton"
            android:textColor="@android:color/white"
            app:backgroundTint="#FF5252"
            app:icon="@drawable/ic_delete"
            app:iconGravity="start"
            app:iconTint="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/btnViewJson" />

        <View
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintTop_toBottomOf="@id/btnDeleteJson" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>